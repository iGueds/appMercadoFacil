<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.appmercadofacil">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name=".MFApplication"
            android:allowBackup="true"
            android:icon="@mipmap/mercado_facil_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/mercado_facil_icon_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".AdicionarProdutoActivity">
        </activity>
        <activity android:name=".ProdutoActivity">

        </activity>
        <activity android:name=".CarrinhoActivity">
        </activity>
        <activity android:name=".ButtonsActivity">
        </activity>
        <activity android:name=".ConfigActivity">
        </activity>
        <activity android:name=".AdicionarActivity">
        </activity>
        <activity
                android:name=".PrincipalActivity"
                android:theme="@style/AppTheme.Toolbar">
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name=".FirebaseMessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>